<% environment.context_class.instance_eval { include WickedPdf::WickedPdfHelper::Assets } %>

@import "_variables";

@font-face {
  font-family: "Circular Std";
  src: url("<%= wicked_pdf_asset_base64('lineto-circular-bold.woff') %>") format("woff");
  font-weight: bold;
  font-style: bold;
}

@font-face {
  font-family: Georgia;
  src: url("<%= wicked_pdf_asset_base64('Georgia.ttf') %>")  format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: "Icons";
  src: url("<%= wicked_pdf_asset_base64('semantic_ui/themes/default/assets/fonts/icons.ttf') %>")  format('truetype');
  font-weight: normal;
  font-style: normal;
}

html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body {
  /* For some reason, Heroku is printing smaller fonts */
  font-size: <%= "#{Rails.env.development? ? 16 : 20}px" %>;
  font-family: $font-serif;
}

.page {
  page-break-before: always;
}

.data_point {
  position: relative;
  float: left;
  /* For some reason, Heroku isn't calculating orientation/sizes correctly */
  width: <%= "#{Rails.env.development? ? 4.625 : 6}in" %>;
  height: <%= "#{Rails.env.development? ? 7.5 : 9.5}in" %>;

  &:first-child {
    margin-right: 0.5in;
  }

  img {
    max-width: 80%;
    margin-bottom: 1.5em;
  }

  h2 {
    font-size: 0.5em;
    color: $darkGrey;
    margin: 0 0 1em;
    font-family: $font-sans;
  }

  p {
    margin: 0 0 2em;
    line-height: 1.33em;
  }

  .attribution {
    position: absolute;
    width: 100%;
    bottom: 0;
    font-size: 0.5em;
    line-height: 1em;
    font-family: $font-sans;
    color: $lightGrey;
  }

  .bookmark {
    position: absolute;
    top: 0;
    right: 0;
    display: inline-block;
    width: 1em;
    height: 1em;
    color: $blue;
    font-size: 2em;
    font-family: 'Icons';
    font-style: normal;
    font-weight: normal;
    text-align: right;
    -webkit-font-smoothing: antialiased;

    &:before {
      content: "\f02e";
      background: none !important;
    }

    &.remove:before {
      content: "\f097";
    }
  }
}