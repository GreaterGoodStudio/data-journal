<% environment.context_class.instance_eval { include WickedPdf::WickedPdfHelper::Assets } %>

@import "_variables";

@font-face {
  font-family: "Icons";
  src: url("<%= wicked_pdf_asset_base64('semantic_ui/themes/default/assets/fonts/icons.ttf') %>")  format('truetype');
  font-weight: normal;
  font-style: normal;
}

html {
  box-sizing: border-box;
}

body {
  /* For some reason, Heroku is printing smaller fonts */
  font-size: <%= "#{Rails.env.development? ? 16 : 20}px" %>;
  font-family: $font-serif;
}

.page {
  page-break-before: always;
}

.data_point {
  position: relative;
  float: left;
  width: <%= "#{Rails.env.development? ? 4.25 : 5.625}in" %>;
  height: <%= "#{Rails.env.development? ? 7.25 : 9.25}in" %>;
  margin-left: 0.5in;

  &:first-child {
    margin-left: 0;
    margin-right: 0.5in;
  }

  img {
    max-width: <%= "#{Rails.env.development? ? 3.25 : 4.25}in" %>;
    margin-bottom: 0.25in;
  }

  h2 {
    font-size: 0.5em;
    color: $darkGrey;
    margin: 0 0 1em;
    font-family: $font-sans;
  }

  p {
    margin: 0 0 2em;
    line-height: 1.33em;
  }

  .attribution {
    position: absolute;
    width: 100%;
    bottom: 0;
    font-size: 0.75em;
    line-height: 1em;
    font-family: $font-sans;
    color: $grey;
  }

  .bookmark {
    position: absolute;
    top: 0;
    right: 0;
    display: inline-block;
    width: 1em;
    height: 1em;
    color: $blue;
    font-size: 2em;
    font-family: 'Icons';
    font-style: normal;
    font-weight: normal;
    text-align: right;
    -webkit-font-smoothing: antialiased;

    &:before {
      content: "\f02e";
      background: none !important;
    }

    &.remove:before {
      content: "\f097";
    }
  }
}