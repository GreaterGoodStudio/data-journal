<% environment.context_class.instance_eval { include PdfHelper } %>

@import "_variables";

@font-face {
  font-family: "Circular Std";
  src: url("<%= asset_data_base64('lineto-circular-medium.woff') %>") format("woff");
  font-weight: normal;
  font-style: normal; }

@font-face {
  font-family: "Circular Std";
  src: url("<%= asset_data_base64('lineto-circular-bold.woff') %>") format("woff");
  font-weight: bold;
  font-style: bold; }


html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body {
  font-family: $font-serif;
  font-size: 18px;
}

.page { 
  page-break-before: always;
}

.data_point {
  float: left;
  width: 50%;
  padding: 1.5em 1em;

  img {
    max-width: 80%;
    margin-bottom: 1.5em;
  }

  h2 {
    font-size: 0.5em;
    color: $darkGrey;
    margin: 0 0 1em;
    font-family: $font-sans;
  }

  p {
    margin: 0 0 2em;
    line-height: 1.33em;
  }
}