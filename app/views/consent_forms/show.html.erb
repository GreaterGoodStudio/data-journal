<div id="consent_form">
  <div class="ui basic vertical clearing segment">
    <h1 class="ui left floated header">Consent Form Detail</h1>
  </div>

  <div class="ui grid">
    <div class="seven wide column">
      <% @consent_form.images.each do |img| %>
        <%= image_tag img.url(:large), class: "ui fluid image" %>
      <% end %>
    </div>

    <div class="three wide column">
      <div class="ui list">
        <%= link_to @consent_form, class: "item", method: :delete, data: { confirm: "Are you sure you want to delete this consent form?" } do %>
          <i class="icon remove circle"></i>
          <div class="content">Delete Consent Form</div>
        <% end if policy(@consent_form).destroy? %>
      </div>
    </div>
  </div>  
</div>
