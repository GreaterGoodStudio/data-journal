<h2 class="ui center aligned header">Welcome! Please login.</h2>

<%= form_for(resource, as: resource_name, url: new_user_session_path, html: { class: "ui form" }) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="inline field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Sign in to Dashboard", class: "ui fluid primary button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
