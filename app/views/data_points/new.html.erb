<%= content_for :page_title, "Create New Data Point" %>

<div id="data_point">
  <%= render "back" %>

  <%= form_for @data_point, url: session_data_points_path(@session), remote: true, html: { class: "ui form", data: { loading_text: "Creating Data Point" } } do |f| %>
    <div class="ui grid">
      <div class="five wide column">
        <%= render "info" %>
      </div>

      <div class="seven wide column">

        <%= render "form_fields", f: f %>

        <div class="field">
          <div class="ui horizontal list">
            <div class="item">
              <%= f.submit "Save", class: "ui fluid red button" %>
            </div>
            <div class="item">
              <%= link_to "Cancel", :back, class: "ui fluid basic button" %>
            </div>
          </div>
        </div>
      </div>

      <div class="two wide column">
        <div class="ui sticky">
          <div class="ui list">
            <div class="item">
              <%= f.submit "Save", class: "ui fluid red button" %>
            </div>
            <div class="item">
              <%= link_to "Cancel", :back, class: "ui fluid basic button" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %> 
</div>
