<h2 class="ui center aligned header"><%= t 'devise.invitations.edit.header' %></h2>

<%= form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "ui form"} do |f| %>
  <%= devise_error_messages! %>

  <%= render "users/shared/user_form", f: f %>

  <div class="actions">
    <%= f.hidden_field :invitation_token %>
    <%= f.submit t("devise.invitations.edit.submit_button"), class: "ui fluid primary button"  %>
  </div>
<% end %>
