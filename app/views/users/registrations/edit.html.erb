<h2 class="ui center aligned header">My Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post, class: "ui form" }) do |f| %>
  <%= devise_error_messages! %>

  <%= render "users/shared/user_form", f: f %>

  <div class="required field">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "off" %>
    <small class="helper">(we need your current password to confirm your changes)</small>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "ui fluid primary button" %>
  </div>
<% end %>
